    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Node",
            "type": "pwa-node",
            "request": "launch",
            "runtimeExecutable": "node",
            "runtimeArgs": ["--loader", "ts-node/esm"/*, "--experimental-specifier-resolution=node"*/],
            "args": ["${file}"],
            "cwd": "${workspaceRoot}",
            "internalConsoleOptions": "openOnSessionStart",
            "skipFiles": ["<node_internals>/**", "node_modules/**"],
            "console": "internalConsole",
            "outputCapture": "std",
        }
    ]
}
